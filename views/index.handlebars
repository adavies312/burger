<div class="row text-center">
    <div class="col-md-6">
      <h3>Ready to eat!</h3>
        {{#each burgers}}
          {{#unless devoured}}
          <form action="burger/eat/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
                  <button class="btn btn-success" type="submit">Devour It!</button>
            </div>
          </form>
          {{/unless}}
        {{/each}}
    </div>
    <div class="col-md-6">
      <h3>Already eaten!</h3>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
            </div>
          {{/if}}
        {{/each}}
    </div>
</div>